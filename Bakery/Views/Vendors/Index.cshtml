<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Vendors!</title>
  </head>
  <body>
    @using Bakery.Models;

    <h1>Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added yet!</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
    }

    <p><a href='/'>Back home</a></p>
    <p><a href='/vendors/new'>Add a new vendor</a></p>
    @{
      Layout = "_Layout";
    }
  </body>
</html>