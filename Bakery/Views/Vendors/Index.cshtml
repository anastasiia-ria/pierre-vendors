<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Vendors!</title>
  </head>
  <body>
    @using Bakery.Models;

    <h1>Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added yet!</h3>
    } 

    <ol>
      @foreach (Vendor vendor in Model)
      {
        <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
      }
    </ol>
    
    <div class="button-group">
      <a href='/vendors/new'>Add a new vendor</a>
      <form action='/vendors/delete' method="post">
        <button type="submit" name="button">Clear all vendors</button>
      </form>
    </div>
    <div class="navigation">
      <a href='/'>Home</a>
    </div>
    @{
      Layout = "_Layout";
    }
  </body>
</html>