<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Vendors!</title>
  </head>
  <body>
    <h1>Add a vendor</h1>

    <form action="/vendors" method="post">
      <label for="vendorName">Vendor name</label>
      <input id="vendorName" name="vendorName" type="text" required>
      <label for="vendorDescription">Vendor description</label>
      <input id="vendorDescription" name="vendorDescription" type="text">
      <button type="submit">Add</button>
    </form>

    <div class="navigation">
      <a href="/vendors">All Vendors</a>
      <a href="/">Home</a>
    </div>
    
    @{
      Layout = "_Layout";
    }
  </body>
</html>