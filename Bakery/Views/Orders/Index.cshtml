<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Vendors!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using Bakery.Models;

    <h1>Orders</h1>
    @if (Model.Count == 0)
    {
      <p>There are no orders in the list.</p>
    }
    <ul>
      @foreach (Order order in Model)
      {
        <li><a href='/orders/@order.Id'>@order.Title</a></li>
      }
    </ul>

    <a href="/orders/new">Add a new order.</a>

    <form action="/orders/delete" method="post">
      <button type="submit" name="button">Clear All Orders</button>
    </form>
  </body>
</html>